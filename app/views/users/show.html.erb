<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= link_to 'Add Friend', friendships_path(:friends_id => @user), :method => :post %>
  </article>
</section>
